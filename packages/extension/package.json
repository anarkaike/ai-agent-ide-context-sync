{
    "name": "ai-agent-ide-context-sync-vscode",
    "displayName": "AI Agent IDE Context Sync",
    "description": "Complete AI Kernel management: personas, tasks, analytics, and context sync",
    "version": "1.0.1",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "publisher": "junio-de-almeida-vitorino",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/anarkaike/ai-agent-ide-context-sync.git",
        "directory": "packages/extension"
    },
    "activationEvents": [
        "onView:ai-agent-sync-personas"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "ai-agent-sync.init",
                "title": "AI Agent Sync: Initialize Workspace",
                "icon": "$(rocket)"
            },
            {
                "command": "ai-agent-sync.build",
                "title": "AI Agent Sync: Build Context",
                "icon": "$(sync)"
            },
            {
                "command": "ai-agent-sync.status",
                "title": "AI Agent Sync: Show Status"
            },
            {
                "command": "ai-agent-sync.createPersona",
                "title": "Create New Persona",
                "icon": "$(add)"
            },
            {
                "command": "ai-agent-sync.editPersona",
                "title": "Edit Persona"
            },
            {
                "command": "ai-agent-sync.deletePersona",
                "title": "Delete Persona"
            },
            {
                "command": "ai-agent-sync.createTask",
                "title": "Create New Task",
                "icon": "$(add)"
            },
            {
                "command": "ai-agent-sync.archiveTask",
                "title": "Archive Task"
            },
            {
                "command": "ai-agent-sync.deleteTask",
                "title": "Delete Task"
            },
            {
                "command": "ai-agent-sync.toggleChecklistItem",
                "title": "Toggle Checklist Item"
            },
            {
                "command": "ai-agent-sync.openFile",
                "title": "Open File"
            },
            {
                "command": "ai-agent-sync.refreshPersonas",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "ai-agent-sync.refreshStatus",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "ai-agent-sync.refreshAnalytics",
                "title": "Refresh",
                "icon": "$(refresh)"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "ai-agent-sync",
                    "title": "AI Agent Sync",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "ai-agent-sync": [
                {
                    "id": "ai-agent-sync-personas",
                    "name": "üë• AI Agents & Tasks"
                },
                {
                    "id": "ai-agent-sync-analytics",
                    "name": "üìä Analytics"
                },
                {
                    "id": "ai-agent-sync-status",
                    "name": "‚öôÔ∏è Kernel Status"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "ai-agent-sync.init",
                    "when": "view == ai-agent-sync-personas",
                    "group": "navigation@1"
                },
                {
                    "command": "ai-agent-sync.build",
                    "when": "view == ai-agent-sync-personas",
                    "group": "navigation@2"
                },
                {
                    "command": "ai-agent-sync.createPersona",
                    "when": "view == ai-agent-sync-personas",
                    "group": "navigation@3"
                },
                {
                    "command": "ai-agent-sync.refreshPersonas",
                    "when": "view == ai-agent-sync-personas",
                    "group": "navigation@4"
                },
                {
                    "command": "ai-agent-sync.refreshStatus",
                    "when": "view == ai-agent-sync-status",
                    "group": "navigation"
                },
                {
                    "command": "ai-agent-sync.refreshAnalytics",
                    "when": "view == ai-agent-sync-analytics",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "ai-agent-sync.editPersona",
                    "when": "view == ai-agent-sync-personas && viewItem == persona",
                    "group": "inline@1"
                },
                {
                    "command": "ai-agent-sync.deletePersona",
                    "when": "view == ai-agent-sync-personas && viewItem == persona",
                    "group": "inline@2"
                },
                {
                    "command": "ai-agent-sync.createTask",
                    "when": "view == ai-agent-sync-personas && viewItem == tasks-section",
                    "group": "inline"
                },
                {
                    "command": "ai-agent-sync.archiveTask",
                    "when": "view == ai-agent-sync-personas && viewItem == task",
                    "group": "inline@1"
                },
                {
                    "command": "ai-agent-sync.deleteTask",
                    "when": "view == ai-agent-sync-personas && viewItem == task",
                    "group": "inline@2"
                }
            ]
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/node": "16.x",
        "eslint": "^8.41.0"
    }
}
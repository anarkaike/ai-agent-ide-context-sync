{
    "name": "ai-agent-ide-context-sync-vscode",
    "displayName": "AI Agent IDE Context Sync",
    "description": "Visual interface for managing universal AI agent context",
    "version": "0.3.0",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "publisher": "junio-de-almeida-vitorino",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/anarkaike/ai-agent-ide-context-sync.git",
        "directory": "packages/extension"
    },
    "activationEvents": [
        "onCommand:ai-agent-sync.build",
        "onCommand:ai-agent-sync.status"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "ai-agent-sync.build",
                "title": "AI Agent Sync: Build Context",
                "icon": "$(sync)"
            },
            {
                "command": "ai-agent-sync.status",
                "title": "AI Agent Sync: Show Status"
            },
            {
                "command": "ai-agent-sync.refreshPersonas",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "ai-agent-sync.refreshStatus",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "ai-agent-sync.openTask",
                "title": "Open Task File"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "ai-agent-sync",
                    "title": "AI Agent Sync",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "ai-agent-sync": [
                {
                    "id": "ai-agent-sync-personas",
                    "name": "AI Agents & Tasks"
                },
                {
                    "id": "ai-agent-sync-status",
                    "name": "Kernel Status"
                }
            ]
        },
        "menus": {
            "view/item/context": [
                {
                    "command": "ai-agent-sync.openTask",
                    "when": "view == ai-agent-sync-personas && viewItem == task"
                }
            ],
            "view/title": [
                {
                    "command": "ai-agent-sync.refreshPersonas",
                    "when": "view == ai-agent-sync-personas",
                    "group": "navigation"
                },
                {
                    "command": "ai-agent-sync.refreshStatus",
                    "when": "view == ai-agent-sync-status",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/node": "16.x",
        "eslint": "^8.41.0"
    }
}
{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "rules": {
    "no-unused-vars": "off",
    "no-undef": "off",
    "no-empty": "off",
    "no-control-regex": "off",
    "no-useless-escape": "off"
  },
  "overrides": [
    {
      "files": [
        "test/**"
      ],
      "env": {
        "mocha": true
      }
    }
  ]
}
